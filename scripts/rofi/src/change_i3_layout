#!/usr/bin/env bash

get_options() {
	echo "â¬†ï¸ vstack"
	echo "â¡ï¸ hstak"
	echo "ğŸ”ƒ spiral"
	echo "2ï¸âƒ£ 2columns"
	echo "3ï¸âƒ£ 3columns"
	echo "ğŸ¤ companion"
	echo "â— autosplit"
	echo "ğŸ™… null"
}

main() {

	choice=$( (get_options) | rofi -theme $HOME/.config/rofi/launchers/ssh/style.rasi -dmenu -i -fuzzy -p "i3 layout")

	if [[ -z "${choice// /}" ]]; then
		exit 1
	fi

	case $choice in
	"â¬†ï¸ vstack")
		param="vstack 0.65 right"
		;;
	"â¡ï¸ hstak")
		param="hstack 0.8 down"
		;;
	"ğŸ”ƒ spiral")
		param="spiral"
		;;
	"2ï¸âƒ£ 2columns")
		param="2columns"
		;;
	"3ï¸âƒ£ 3columns")
		param="3columns"
		;;
	"ğŸ¤ companion")
		param="companion"
		;;
	"â— autosplit")
		param="autosplit"
		;;
	"ğŸ™… null")
		param="null"
		;;
	esac

	i3l "$param"
	echo $param
}

main "$@" &

exit 0
